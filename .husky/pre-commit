#!/usr/bin/env sh
. "$(dirname "$0")/husky.sh"

echo "🔎 Running lint-staged..."

# ─── SKIP HUSKY IN CI ──────────────────────────────────────────────────────────
if [ -n "$CI" ]; then
  echo "⏭️  Skipping pre-commit hooks in CI"
  exit 0
fi

npx lint-staged

if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix errors before committing."
  exit 1
fi
